{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/ebb-core/src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true,
    "tsConfigPath": "apps/ebb-core/tsconfig.app.json"
  },
  "monorepo": true,
  "root": "apps/ebb-core",
  "projects": {
    "ebb-core": {
      "type": "application",
      "root": "apps/ebb-core",
      "entryFile": "main",
      "sourceRoot": "apps/ebb-core/src",
      "compilerOptions": {
        "tsConfigPath": "apps/ebb-core/tsconfig.app.json"
      }
    },
    "ebb-app": {
      "type": "application",
      "root": "apps/ebb-app",
      "entryFile": "main",
      "sourceRoot": "apps/ebb-app/src",
      "compilerOptions": {
        "tsConfigPath": "apps/ebb-app/tsconfig.app.json"
      }
    }
  }
}