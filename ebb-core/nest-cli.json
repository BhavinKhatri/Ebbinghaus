{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/ebb-app/src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true,
    "tsConfigPath": "apps/ebb-app/tsconfig.app.json",
    "plugins": [
      {
        "name": "@nestjs/swagger",
        "options": {
          "introspectComments": true,
          "dtoFileNameSuffix": [
            ".dto.ts",
            ".entity.ts"
          ]
        }
      }
    ]
  },
  "monorepo": true,
  "root": "apps/ebb-app",
  "projects": {
    "ebb-app": {
      "type": "application",
      "root": "apps/ebb-app",
      "entryFile": "main",
      "sourceRoot": "apps/ebb-app/src",
      "compilerOptions": {
        "tsConfigPath": "apps/ebb-app/tsconfig.app.json"
      }
    }
  }
}